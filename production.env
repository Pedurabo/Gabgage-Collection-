# Production Environment Variables
FLASK_ENV=production
FLASK_APP=app.py

# Security - Generate a strong secret key
SECRET_KEY=gcms_prod_2025_secure_key_change_this_in_production_immediately
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True

# Database - Use SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite:///garbage_collection_prod.db

# Email Configuration - Update with your email service
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis - For caching and session storage
REDIS_URL=redis://localhost:6379/0

# Monitoring - Add your Sentry DSN when ready
SENTRY_DSN=

# SSL Certificate Paths
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Application Settings
DEBUG=False
TESTING=False 